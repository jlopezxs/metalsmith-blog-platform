{{> top }}

    <header class="main-header {{#if _blog.cover}}" style="background-image: url({{_blog.cover}}){{else}}no-cover{{/if}}">
        <nav class="main-nav overlay clearfix">
            {{#if _blog.logo}}<a class="blog-logo" href="{{_blog.url}}"><img src="{{_blog.logo}}" alt="{{_blog.title}}" /></a>{{/if}}
            {{#if _blog.navigation}}
                <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
            {{/if}}
        </nav>
        <div class="vertical">
            <div class="main-header-content inner">
                <h1 class="page-title">{{_blog.title}}</h1>
                <h2 class="page-description">{{_blog.description}}</h2>
            </div>
        </div>
        <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
    </header>

    <main id="content" class="content" role="main">
        {{> "loop"}}
    </main>

{{> bottom }}